datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Member {
  id        Int      @id @default(autoincrement())
  firstName String
  lastName  String
  matricno  String   @unique
  email     String   @unique
  role      String
}

model Project {
  id          Int      @id @default(autoincrement())
  title       String
  description String
  startDate   DateTime
  endDate     DateTime?
  members     Member[]
}

model Event {
  id          Int      @id @default(autoincrement())
  name        String
  date        DateTime
  location    String
  description String
}
