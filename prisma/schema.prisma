datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

enum Role {
  USER
  ADMIN
  SUPERADMIN
}

model Member {
  id        Int           @id @default(autoincrement())
  firstName String
  lastName  String
  matricno  String        @unique
  email     String        @unique
  password  String
  role      Role          @default(USER)
  projects  Project[]     @relation("ProjectMembers")
  groups    GroupMember[]
  leads     Group[]       @relation("LeadMember")
}

model Project {
  id          Int       @id @default(autoincrement())
  title       String
  description String
  startDate   DateTime
  endDate     DateTime?
  members     Member[]  @relation("ProjectMembers")
}

model Event {
  id          Int       @id @default(autoincrement())
  name        String
  date        DateTime
  location    String
  description String
}

model Group {
  id          Int           @id @default(autoincrement())
  name        String
  lead        Member        @relation("LeadMember", fields: [leadId], references: [id])
  leadId      Int
  members     GroupMember[]
}

model GroupMember {
  memberId    Int
  groupId     Int
  member      Member        @relation(fields: [memberId], references: [id])
  group       Group         @relation(fields: [groupId], references: [id])
  @@id([memberId, groupId])
}
